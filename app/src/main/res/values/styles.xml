<resources>

    <style name="QuDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:launchMode">singleInstance</item>
    </style>

    <style name="AppLoadStart" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="mainButton">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="tab_1_Button">
        <item name="android:textColor">#90ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="tab_3_Button">
        <item name="android:textSize">@dimen/x26</item>
        <item name="android:drawablePadding">@dimen/x10</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#00000000</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="login_head">
        <item name="android:layout_height">@dimen/view_tab_height_2</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="login_head_item">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x32</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="line">
        <item name="android:layout_height">@dimen/x1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#20000000</item>
    </style>

    <style name="set_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/y30</item>
        <item name="android:paddingBottom">@dimen/y30</item>
        <item name="android:paddingLeft">@dimen/x40</item>
        <item name="android:paddingRight">@dimen/x40</item>
        <item name="android:textColor">#90000000</item>
    </style>


    <style name="play_item">
        <item name="android:layout_height">@dimen/play_item</item>
        <item name="android:layout_width">@dimen/play_item</item>
    </style>

    <style name="TitleBar">
        <!--<item name="android:background">@android:color/white</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="titlebar_leftAndRightTextSize">15dp</item>
        <item name="titlebar_titleTextSize">16sp</item>
        <item name="titlebar_titleTextColor">@android:color/black</item>
        <item name="titlebar_leftAndRightPadding">12sp</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="V7DialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--去除边缘阴影-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5 -->
        <item name="android:backgroundDimAmount">0.3</item>
        <!-- 背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CallActivityTheme" parent="android:Theme.Black">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
